{
  "name": "iptv-rebroadcast-server",
  "version": "1.0.0",
  "description": "Auto On-Demand IPTV Rebroadcast Server with Database",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js 2>&1 | tee -a logs/server.log",
    "setup": "npm install && mkdir -p data public logs config models services scripts",
    "setup-linux": "./setup-linux-server.sh",
    "db-init": "node scripts/initDatabase.js",
    "db-maintenance": "node scripts/dbMaintenance.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "iptv",
    "rebroadcast",
    "streaming",
    "database",
    "ffmpeg"
  ],
  "author": "IPTV Admin",
  "license": "MIT"
}
